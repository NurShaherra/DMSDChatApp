<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.rp.webservices.dmsdchatapp.ChatActivity">

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvWeather"
        android:layout_alignStart="@+id/tvWeather"
        android:layout_below="@+id/tvWeather"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnAddMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Message"
        android:layout_alignBottom="@+id/etMessage"
        android:layout_toRightOf="@+id/etMessage"
        android:layout_toEndOf="@+id/etMessage"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnAddMessage"
        android:layout_marginTop="57dp" />
</RelativeLayout>
